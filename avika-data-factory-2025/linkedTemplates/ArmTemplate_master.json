{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "avika-data-factory-2025"
		},
		"DataLakeConnection_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'DataLakeConnection'"
		},
		"SQLDatabaseConnection_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SQLDatabaseConnection'"
		},
		"DataLakeConnection_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://avikadatalake2024.dfs.core.windows.net/"
		},
		"SQLDatabaseConnection_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "avika-sql-server-2025.database.windows.net"
		},
		"SQLDatabaseConnection_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "DataWarehouse"
		},
		"SQLDatabaseConnection_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "sqladmin"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "avika-data-factory-2025_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"DataLakeConnection_accountKey": {
						"value": "[parameters('DataLakeConnection_accountKey')]"
					},
					"SQLDatabaseConnection_password": {
						"value": "[parameters('SQLDatabaseConnection_password')]"
					},
					"DataLakeConnection_properties_typeProperties_url": {
						"value": "[parameters('DataLakeConnection_properties_typeProperties_url')]"
					},
					"SQLDatabaseConnection_properties_typeProperties_server": {
						"value": "[parameters('SQLDatabaseConnection_properties_typeProperties_server')]"
					},
					"SQLDatabaseConnection_properties_typeProperties_database": {
						"value": "[parameters('SQLDatabaseConnection_properties_typeProperties_database')]"
					},
					"SQLDatabaseConnection_properties_typeProperties_userName": {
						"value": "[parameters('SQLDatabaseConnection_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}